    <!-- toolbar space fix -->
    <div class="toolbar-space"></div>
    <!-- alert for home only -->
    <main>
        <div class="container body-wrapper">
            <form action="/doctor/dashboard/patient/new">
                <h3 class="title fs-28 text-center heading head"><span>New Treatment</span></h3>
                <div class="col-12 my-4">
                    <div class="form-group row ">
                        <label for="Duration" class="col-sm-2 col-form-label ">Duration </label>
                        <div class="col-sm-3">
                            <input type="date" class="form-control" id="Duration" name="Duration">
                        </div>
                    </div>
                </div>
                <div class="row col-12 my-4">
                    <div class="col-sm-2">
                        <label for="DocName">Doctor</label>
                    </div>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"  name="doctor" value="<%= fullName %>" disabled>
                    </div>
                </div>
                <div class="row col-12 my-4">
                    <div class="col-sm-2">
                        <label for="DiseaseDesc">Disease & History</label>
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" id="DiseaseDesc" rows="3"></textarea>
                    </div>
                </div>
                <div class="row col-12 my-4">
                    <div class="col-sm-2">
                        <label for="Prescription">Prescription</label>
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" id="Prescription" rows="3"></textarea>
                    </div>
                </div>
                <div class="row col-12 my-4">
                    <div class="col-sm-2">
                        <label for="Medicine Time">Medicine Time</label>
                    </div>
                    <div class="col-sm-8 timetable">
                            <table class="table  small-text" id="tb">
                                <tr class="tr-header">
                                    <a href="javascript:void(0);" style="font-size:18px;" id="addMoreData"
                                            title="Add More Person"><i class="bi bi-plus-circle" style="color:#0b243b; float:right"></i></a>
                                </tr>
                                <hr style="color: white; margin:1px;">
                                <td>    
                                <div class="row ">
                                    <div class="col-sm-2 ">
                                        <label for="Medicine Name">Medicine:</label>
                                    </div>
                                    <div class="col-sm-10 center pd-0">
                                        <input class="form-control" name="medicinename" placeholder="To add more medicine add Row "></input>
                                    </div>
                                </div>
                                <hr style="color: white; margin:2px;">
                                <div class="row ">
                                    <div class="col-sm-2 ">
                                        <label for="timing">Timing:</label>
                                    </div>
                                    <div class="col-sm-10 center">
                                        <input class="form-control" mane="time" rows="1">
                                    </div>
                                    <hr style="color:gray; width:85%; margin-top: 4px; margin-left: 50px;">
                                </div>
                                <td><a href='javascript:void(0);'  class='remove iconn'><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" 
                                    height="24" style="padding: 0px; float:center;"><path fill-rule="evenodd" fill="red" d="M1 12C1 5.925 5.925 1 12 1s11
                                     4.925 11 11-4.925 11-11 11S1 18.075 1 12zm8.036-4.024a.75.75 0 00-1.06 1.06L10.939 12l-2.963 2.963a.75.75 0
                                      101.06 1.06L12 13.06l2.963 2.964a.75.75 0 001.061-1.06L13.061 12l2.963-2.964a.75.75 0 10-1.06-1.06L12 10.939
                                       9.036 7.976z"></path></svg></a>
                               </td>
                                </tr>
                                </table>   				                       
    
                    </div>
                </div>
                <div class="row col-12 my-4">
                    <div class="col-sm-2">
                        <label for="Response">Response</label>
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" id="Response" rows="3"></textarea>
                    </div>
                </div>
                <div class="center mx-auto ">
                    <a class="change-btn" href="">Save</a>
                </div>
            </form>
        </div>
    </main>
    <!-- Optional JavaScript -->
    <!-- Bundled Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script>
        $(function () {

            $('#addMoreData').on('click', function () {
                var data = $("#tb tr:eq(1)").clone(true).appendTo("#tb");
                data.find("input").val('');
            });
            $(document).on('click', '.remove', function () {
                var trIndex = $(this).closest("tr").index();
                if (trIndex > 1) {
                    $(this).closest("tr").remove();
                } else {
                    alert("Sorry!! You cant't Delete this Row' ");
                }
            });
        });
    </script>

