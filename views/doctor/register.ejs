    <div class="row body-wrapper">
        <div class="col-md-4 order-md-2 text-center justify-self-center mt-5">
            <img id="front-banner" height="500px" width="400px" src="/images/shared/register/welcome.png" alt="">
        </div>
        <form action="/doctor/register" method="POST" class="col-md-8 register-form-wrapper mt-5 order-md-1">
            <ul class="validatorErrorsList">
                <% if (error instanceof Array) { %>
                    <% error.forEach((err)=> { %>
                        <li class=" validatorErrors  text-center">
                            <%= err.msg %>
                        </li>
                        <% }) %>
                            <% } else { %>
            </ul>
            <% if (error) { %>
                <h5 class="text-center" style="text-align: center;">
                    <%= error %>
                </h5>
                <% } %>
                    <% } %>
                        <% if (status) { %>
                            <h5 class="text-center" style="text-align: center;">
                                <%= status %>
                            </h5>
                            <% } %>
                                <h3 class="title fs-28 text-center">Doctor Register</h3>
                                <div class="row my-4">
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="firstName" class="col-sm-3 col-form-label">First Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="firstname">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="LastName" class="col-sm-3 col-form-label">Last Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="lastname">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Address" class="col-sm-3 col-form-label">Address</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="address">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="mobileNo" class="col-sm-3 col-form-label">Mobile No.</label>
                                            <div class="col-sm-9">
                                                <input type="number" class="form-control" id="mobileNo" name="mobileNo">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Designation" class="col-sm-3 col-form-label">Designation</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="designation"
                                                    placeholder=" MBBS, MD" name="designation">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Specialization"
                                                class="col-sm-3 col-form-label">Specialization</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="specialization"
                                                    placeholder="Cardiologist, etc" name="specialization">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="MCIR" class="col-sm-3 col-form-label">MCIR No</label>
                                            <div class="col-sm-9">
                                                <input type="number" class="form-control" id="mcir"
                                                    placeholder=" Should be 6 digit number" name="mcirno">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Email" class="col-sm-3 col-form-label">Email</label>
                                            <div class="col-sm-9">
                                                <input type="email" class="form-control" id="email" name="email">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Password" class="col-sm-3 col-form-label">Password</label>
                                            <div class="col-sm-9">
                                                <input type="password" class="form-control" id="password"
                                                    name="password">
                                                <small id="Help" class="form-text text-muted">Minimum 3
                                                    characters</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <div class="form-group row">
                                            <label for="Password" class="col-sm-3 col-form-label">Confirm
                                                Password</label>
                                            <div class="col-sm-9">
                                                <input type="password" class="form-control" id="password"
                                                    name="password">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  my-2">
                                    <button class="btn btn-light" style="float: right;">Submit</button>
                                </div>
                                <a id="backtohome" href="/">Back to Home Page</a>
        </form>
    </div>
